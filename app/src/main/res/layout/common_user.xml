<!-- This layout get inflated once for every availble user (at the select-user activity)  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleUser"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/pressable" >

    <!-- The right border -->
    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="#2F2F2F" />
    
    <TextView
        android:id="@+id/textUsername"
        style="@style/textLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/lorem" />
    
    <ImageView
        style="@style/stretchedImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/textUsername"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:src="@drawable/user_large" />
    
</RelativeLayout>